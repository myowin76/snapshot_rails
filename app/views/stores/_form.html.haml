= form_for @store do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :address2
    = f.text_field :address2
  .field
    = f.label :address3
    = f.text_field :address3
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :store_format
    = f.text_field :store_format
  .field
    = f.label :retailer
    = f.text_field :retailer
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
