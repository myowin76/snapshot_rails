<h1>Listing admin_roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_roles.each do |admin_role| %>
      <tr>
        <td><%= admin_role.name %></td>
        <td><%= admin_role.description %></td>
        <td><%= link_to 'Show', admin_role %></td>
        <td><%= link_to 'Edit', edit_admin_role_path(admin_role) %></td>
        <td><%= link_to 'Destroy', admin_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_admin_role_path %>
